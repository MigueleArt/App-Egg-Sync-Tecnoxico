{
  "compilerOptions": {
    "target": "ES2020",            // O "ES6" si necesitas compatibilidad más amplia
    "module": "CommonJS",          // Para Node.js
    "outDir": "./dist",            // Carpeta de salida
    "rootDir": "./src",            // Carpeta de entrada
    "strict": true,                // Verificaciones estrictas
    "esModuleInterop": true,       // Importación de módulos CommonJS
    "forceConsistentCasingInFileNames": true, // Enforce case-sensitive imports
    "skipLibCheck": true,          // Omite verificaciones de tipos en definiciones de bibliotecas
    "resolveJsonModule": true,     // Permite importar archivos JSON como módulos
    "moduleResolution": "node",    // Resolución de módulos estilo Node.js
    "allowSyntheticDefaultImports": true, // Simplifica imports de módulos sin exportaciones por defecto
    "noImplicitAny": true,         // Evita el uso de `any` implícito
    "noUnusedLocals": true,        // Detecta variables locales no usadas
    "noUnusedParameters": true,    // Detecta parámetros no usados
    "noImplicitReturns": true,     // Detecta funciones que no devuelven un valor
    "noFallthroughCasesInSwitch": true // Previene errores en switch sin break
  },
  "include": ["src/**/*"],         // Incluye todos los archivos en la carpeta src
  "exclude": ["node_modules", "dist"] // Excluye estas carpetas
}
